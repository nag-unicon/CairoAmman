    SUBROUTINE CAB.AI.UPD.BEN.INFO
    $INCLUDE T24.BP I_COMMON
    $INCLUDE T24.BP I_EQUATE
    $INCLUDE T24.BP I_F.FUNDS.TRANSFER
    $INCLUDE T24.BP I_F.BENEFICIARY

    FN.BENEFICIARY = 'F.BENEFICIARY'
    F.BENEFICIARY = ''
    CALL OPF(FN.BENEFICIARY,F.BENEFICIARY)

    LOC.POS = ''
    CALL MULTI.GET.LOC.REF("FUNDS.TRANSFER","RTGS.BANK":VM:"PAY.BEN.NAME":VM:"PAY.BANK.NAME",LOC.POS)
    RTGS.POS = LOC.POS<1,1>
    BEN.POS = LOC.POS<1,2>
    BANK.POS = LOC.POS<1,3>
    YR.BEN.CUSTOMER = COMI

    IF COMI EQ '' THEN
        RETURN
    END

    R.BENEFICIARY = ''
    BEN.ERR = ''
    CALL F.READ(FN.BENEFICIARY,YR.BEN.CUSTOMER,R.BENEFICIARY,F.BENEFICIARY,BEN.ERR)
    IF R.BENEFICIARY EQ '' THEN 
        ETEXT = 'AI-BEN.LIST'
        CALL STORE.END.ERROR
        RETURN
    END
    YR.BEN.ACCT.NO = R.BENEFICIARY<ARC.BEN.BEN.ACCT.NO>
    R.NEW(FT.BEN.ACCT.NO) = YR.BEN.ACCT.NO
    R.NEW(FT.BEN.CUSTOMER) = R.BENEFICIARY<ARC.BEN.BEN.CUSTOMER>
    R.NEW(FT.LOCAL.REF)<1,RTGS.POS> = R.BENEFICIARY<ARC.BEN.ACCT.WITH.BANK>
    R.NEW(FT.LOCAL.REF)<1,BANK.POS> = R.BENEFICIARY<ARC.BEN.BIC>
    RETURN
