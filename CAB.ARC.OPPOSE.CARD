    SUBROUTINE CAB.ARC.OPPOSE.CARD
    $INCLUDE T24.BP I_COMMON
    $INCLUDE T24.BP I_EQUATE
    $INCLUDE CAB.BP I_F.CAB.ARC.CARD.MGMT


    YR.CARD.NO = R.NEW(CAB.ARC.CARD.NO)

    YR.OPP.REASON = R.NEW(CAB.ARC.OPPOSE.CARD)



    CALL CallMobilWS.opposeCard(YR.CARD.NO, YR.OPP.REASON, YR.ERR.CODE)

    IF YR.ERR.CODE<1> THEN
        E = YR.ERR.CODE<2>
        CALL ERR
        RETURN
    END

    YR.CARD.NO[LEN(YR.CARD.NO)-9,6] = 'XXXXXX'
    R.NEW(CAB.ARC.CARD.NO) = YR.CARD.NO
    RETURN
